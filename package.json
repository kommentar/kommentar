{
  "name": "kommentar",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "tsx --env-file=.env src/index.ts",
    "migrate:up": "tsx --env-file=.env src/index.ts --migrate up",
    "migrate:down": "tsx --env-file=.env src/index.ts --migrate down",
    "lint": "eslint --fix .",
    "format": "prettier --write .",
    "prepare": "husky || true",
    "test:_base": "vitest run .",
    "test:unit": "pnpm run test:_base --config vitest.config.unit.mjs",
    "test:integration": "pnpm run test:_base --config vitest.config.integration.mjs",
    "test": "pnpm run test:unit && pnpm run test:integration && vitest run --coverage",
    "test:watch": "vitest",
    "manage": "tsx --env-file=.env scripts/manage-consumers.ts",
    "manage:test-consumer": "tsx --env-file=.env scripts/create-test-consumer.ts",
    "manage:test-api": "tsx --env-file=.env scripts/test-api-client.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@hono/zod-openapi": "^0.16.4",
    "@scalar/hono-api-reference": "^0.9.4",
    "hono": "^4.7.11",
    "hono-rate-limiter": "^0.4.2",
    "pg": "^8.16.0",
    "uuid": "^10.0.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@types/node": "^20.19.0",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "3.3.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vitest": "^2.1.9"
  }
}
